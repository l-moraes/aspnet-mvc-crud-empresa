@model TreinamentoDotNet.ViewModel.Company.CompanyDeleteViewModel
@{
 Layout = "~/Views/Shared/_Layout.cshtml";  
}

<h2>Delete Import</h2>

<p>Are you sure you want to delete this?</p>

<p>
    <strong>Id:</strong> @Model.Id <br />
    <strong>Name:</strong> @Model.Name <br />
    <strong>Cnpj:</strong> @Model.Cnpj <br />
</p>

@using (Html.BeginForm("DeleteConfirmed", "Company"))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}